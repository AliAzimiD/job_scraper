# Flask Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_SECRET_KEY=change_this_to_a_random_secret_key

# PostgreSQL Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jobsdb
POSTGRES_USER=jobuser
POSTGRES_PASSWORD=secure_password_change_me
# POSTGRES_PASSWORD_FILE=/run/secrets/db_password
# DATABASE_URL=postgresql://jobuser:password@localhost:5432/jobsdb

# API Authentication
API_USERNAME=api_user
API_PASSWORD=change_this_to_a_secure_password
# API_PASSWORD_FILE=/run/secrets/api_password

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=logs

# Application Configuration
CONFIG_PATH=config/app_config.yaml

# Data Directories
DATA_DIR=data
UPLOAD_FOLDER=uploads

# Scraper Settings
SCRAPER_MAX_PAGES=5
SCRAPER_RATE_LIMIT_MS=1000
SCRAPER_MAX_CONCURRENT_REQUESTS=5 